# Environment Configuration Template
# Copy this file to .env (production) or .env.local (development) and update with your values

# ===================
# Frontend Configuration
# ===================
# API Base URL - Backend service URL
VITE_API_BASE_URL=https://figma-product-catalog-production.up.railway.app/api/v1
# For local development:
# VITE_API_BASE_URL=http://localhost:8014/api/v1

# Port configurations (for local development)
VITE_API_PORT=8014
VITE_FRONTEND_PORT=5176

# ===================
# Backend Configuration
# ===================
# Database URL (PostgreSQL for production, SQLite for development)
DATABASE_URL=postgresql://user:password@host/database
# For local development with SQLite:
# DATABASE_URL=sqlite+aiosqlite:///./figma_catalog.db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5176,http://localhost:8014,https://your-production-domain.com

# Server Configuration
PORT=8014
API_HOST=0.0.0.0

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
PROJECT_NAME="Figma Product Catalog API"