# Telegram Bot Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file with real tokens!

# Production bot token (from Railway/BotFather)
# This should match TELEGRAM_TOKEN in Railway environment
TELEGRAM_TOKEN=your_production_token_here

# Test bot token (optional, for local development with separate bot)
# If not set, will fall back to TELEGRAM_TOKEN
TEST_TELEGRAM_TOKEN=your_test_token_from_botfather

# Claude API Key (from console.anthropic.com)
CLAUDE_API_KEY=your_anthropic_api_key_here

# Backend API URL (REQUIRED for authorization and order operations)
# Local development: http://localhost:8014/api/v1
# Railway production: https://figma-product-catalog-production.up.railway.app/api/v1
BACKEND_API_URL=http://localhost:8014/api/v1

# MCP Server URL (for authorization checks)
# Local development: http://localhost:8000
# Railway production: https://your-mcp-server.railway.app
MCP_SERVER_URL=http://localhost:8000

# AI Agent Service URL
# Local development: http://localhost:8000
# Railway production: https://your-ai-agent.railway.app
AI_AGENT_URL=http://localhost:8000

# Default shop ID
DEFAULT_SHOP_ID=8

# Webhook configuration (for Railway deployment)
# Leave empty for local development (will use polling mode)
WEBHOOK_URL=
WEBHOOK_PORT=8080

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
